/* Version: 6 - Muted Color Scheme with Blues, Greens, and Purples */

/* General Layout */
body {
    font-family: Arial, sans-serif;
    background-color: #e0e7f1; /* Muted Blue-Grey */
    color: #333;
    margin: 0;
    padding: 0;
}

/* Header Styling */
.main-header {
    background-color: #2a3d66; /* Muted Deep Blue */
    padding: 15px 0;
    text-align: center;
}

.header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 85%;
    margin: auto;
    padding-left: 20px; /* Restored left buffer */
}

/* Logo Small */
.logo-small {
    height: 40px;
    margin-right: 15px;
}

/* Navigation Links */
.nav-links {
    list-style: none;
    display: flex;
    gap: 20px;
    margin: 0;
    padding: 0;
}

.nav-links li {
    display: inline;
}

.nav-links a {
    text-decoration: none;
    font-weight: bold;
    color: #FFD700; /* Muted Gold */
    padding: 8px 15px;
    transition: color 0.3s ease, background 0.3s ease;
}

.nav-links a:hover {
    color: #fff;
    background: #4c5d91; /* Muted Purple */
    border-radius: 5px;
}

/* Table Styling */
.monitor-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-top: 20px;
}

.monitor-table {
    width: 85%;
    border-collapse: collapse;
    background-color: #f9f9ff; /* Light Blueish Background */
    text-align: center;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

.monitor-table th,
.monitor-table td {
    padding: 12px;
    border: 1px solid #ddd;
}

.monitor-table th {
    background-color: #34495e; /* Muted Dark Blue */
    color: #fff;
}

/* Status Colors */
.status-green {
    color: #2ecc71; /* Muted Green */
    font-weight: bold;
}

.status-yellow {
    color: #f1c40f; /* Muted Yellow */
    font-weight: bold;
}

.status-red {
    color: #e74c3c; /* Muted Red */
    font-weight: bold;
}

/* Button Styling */
button {
    padding: 10px 15px;
    background-color: #3498db; /* Muted Blue */
    border: none;
    color: white;
    font-weight: bold;
    border-radius: 4px;
    cursor: pointer;
    transition: background 0.3s ease;
}

button:hover {
    background-color: #2980b9; /* Darker Muted Blue */
}

